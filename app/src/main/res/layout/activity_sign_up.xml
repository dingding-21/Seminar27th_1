<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".ui.SignUpActivity">

    <TextView
        android:id="@+id/sopt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOPT"
        android:textSize="50dp"
        android:textColor="@color/colorYellow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/name_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME"
        android:textColor="@color/colorYellow"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sopt"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/et_name_signup"
        android:layout_width = "0dp"
        android:layout_height="wrap_content"
        android:hint="이름을 입력하세요."
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorLittleWhite"
        app:layout_constraintTop_toBottomOf="@id/name_signup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:inputType="textPersonName"/>

    <TextView
        android:id="@+id/id_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textColor="@color/colorYellow"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_name_signup"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/et_id_signup"
        android:layout_width = "0dp"
        android:layout_height="wrap_content"
        android:hint="아이디를 입력하세요."
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorLittleWhite"
        app:layout_constraintTop_toBottomOf="@id/id_signup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:inputType="textPersonName"/>

    <TextView
        android:id="@+id/pwd_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASSWORD"
        android:textColor="@color/colorYellow"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_id_signup"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/et_pwd_signup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호를 입력하세요."
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorLittleWhite"
        app:layout_constraintTop_toBottomOf="@id/pwd_signup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/pwdcheck_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASSWORD CHECK"
        android:textColor="@color/colorYellow"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_pwd_signup"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/et_pwdcheck_signup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호를 확인하세요."
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorLittleWhite"
        app:layout_constraintTop_toBottomOf="@id/pwdcheck_signup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:inputType="textPassword"/>



    <Button
        android:id="@+id/signup_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:background="@color/colorBlack"
        android:textColor="@color/colorYellow"
        app:layout_constraintStart_toStartOf="@id/et_pwdcheck_signup"
        app:layout_constraintEnd_toEndOf="@id/et_pwdcheck_signup"
        app:layout_constraintTop_toBottomOf="@id/et_pwdcheck_signup"
        android:layout_marginTop="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>